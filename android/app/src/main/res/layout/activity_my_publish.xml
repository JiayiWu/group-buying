<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:toolbar="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_me_publish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greyText"
        tools:context="com.mergeorder.presentation.activity.me.MyPublishActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/my_publish_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            toolbar:title="@string/me_label_publish"
            toolbar:titleTextColor="@color/white"
            toolbar:navigationIcon="@drawable/ic_close_24dp"/>

    <com.mergeorder.presentation.view.TopicListView
            android:id="@+id/my_publish_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/my_publish_toolbar"
            android:divider="@color/greyText"
            android:dividerHeight="8dp">

    </com.mergeorder.presentation.view.TopicListView>

</RelativeLayout>
